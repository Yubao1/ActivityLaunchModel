<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xe.demo4.myapplication4.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:text="standard模式"
        android:textAllCaps="false"
        android:onClick="startStandardModel"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="match_parent"
        android:text="singleTop模式"
        android:textAllCaps="false"
        android:onClick="startSingleTopModel"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="match_parent"
        android:text="singleTask模式"
        android:textAllCaps="false"
        android:onClick="startSingleTaskModel"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="match_parent"
        android:text="singleInstance模式"
        android:textAllCaps="false"
        android:onClick="startSingleInstanceModel"
        android:layout_height="wrap_content" />

</LinearLayout>
